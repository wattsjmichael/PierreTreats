@{
  Layout = "_Layout";
}

@model SweetTreats.Models.Flavor

<h2>Add a flavor to a treat</h2>

<h4>Add a flavor to this treat: @Html.DisplayFor(model => model.FlavorName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.FlavorId)

    @Html.Label("Select a Treat")
    @Html.DropDownList("TreatId")

    <input type="submit" value="Save" />
}
<br>
<p>Don't see a treat? Add one <a href="/Treats/Create">here</a>.</p><br>

<p>@Html.ActionLink("Back to list", "Index", null, null, new { @class="btn btn-outline-dark btn-block"})</p>