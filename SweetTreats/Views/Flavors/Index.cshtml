@{
  Layout = "_Layout";
}

@using SweetTreats.Models;
@model List<SweetTreats.Models.Flavor>;

<h1>Flavors</h1><hr>

@if (@Model.Count == 0)
{
  <p>No Flavors have been added yet!</p>
} 

@foreach (Flavor flavor in Model)
{
  <p class="list-details">@Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId })</p>
}
<br><br>
<p>@Html.ActionLink("Add a Flavor", "Create", null, null, new { @class = "btn btn-outline-dark"})</p>

<p>@Html.ActionLink("Home", "Index", "Home", null, new { @class="btn btn-outline-dark"})</p>