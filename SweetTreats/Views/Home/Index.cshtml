@{
  Layout = "_Layout";
}
@using SweetTreats.Models;
<br><br>
<div style="background:transparent !important" class="jumbotron">
<h1>Welcome to <span style="font-weight:900">Sweet Treats</span></h1><hr>
<p>
<div>
<button type="button" class="btn btn-info btn-large" id="homeButton" data-toggle="modal" data-target="#listButton">
  See All Flavors and Treats
</button>
<div class="modal fade" id="listButton" tabindex="-1" role="dialog" aria-labelledby="listButtonLabel"
aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="listButtonLabel">List of Everthing</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="col-md-4">
          <h2>Flavors:</h2>
          @if (@Model["flavors"].Count == 0)
          {
            <h3>No Flavors have been added yet!</h3>
          }
          @foreach (Flavor flavor in Model["flavors"])
          {
            <li>@Html.ActionLink($"{flavor.FlavorName}", "Details", "Flavors",new { id = flavor.FlavorId}) </li>
          }
        </div>
        <div class="col-md-4">
          <h2>Treats</h2>
          @if (@Model["treats"].Count == 0)
          {
            <h3>No Treats have been added yet!</h3>
          }
          @foreach (Treat treat in Model["treats"])
          {
            <li>@Html.ActionLink($"{treat.TreatName}", "Details", "Treats", new { id = treat.TreatId}) </li>
          }
        </div>
        </div>